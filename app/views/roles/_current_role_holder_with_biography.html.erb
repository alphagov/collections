<% if role.current_holder.present? %>
  <section id="current-role-holder" class="govuk-!-padding-bottom-9">
    <%= render "govuk_publishing_components/components/heading", {
      text: t("roles.headings.current_holder"),
      lang: t_fallback("roles.headings.current_holder"),
      margin_bottom: 2,
    } %>

    <%= render "govuk_publishing_components/components/heading", {
      text: role.current_holder["title"],
      heading_level: 3,
      font_size: "m",
      margin_bottom: 2,
    } %>

    <%= render "govuk_publishing_components/components/govspeak", {
    } do %>
      <%= role.current_holder_biography.html_safe %>
    <% end %>

    <p class="govuk-body">
      <a href="<%= role.link_to_person %>" class="govuk-link" <%= t_lang("people.read_more") %>>
        <%= t("people.read_more") %>
      </a>
    </p>
  </section>
<% end %>
