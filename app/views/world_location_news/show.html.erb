<%
  content_for :title, @world_location_news.title.html_safe
  page_class "govuk-main-wrapper govuk-main-wrapper--auto-spacing"

  ga4_image_card_json = {
    "event_name": "navigation",
    "type": "image card",
    "section": I18n.t("shared.featured", locale: :en)
  }.to_json
%>

<% content_for :meta_tags do %>
  <%= tag("meta", name: "description", content: @world_location_news.description) if @world_location_news.description %>
<% end %>

<div class="govuk-grid-row gem-print-columns-none" <%= dir_attribute %> <%= lang_attribute %>>
  <div class="govuk-grid-column-two-thirds">
    <%= render "govuk_publishing_components/components/heading", {
      context: I18n.t("world_location_news.types.#{@world_location_news.type}"),
      text: @world_location_news.title,
      heading_level: 1,
      margin_bottom: 8,
      font_size: "xl",
    } %>
  </div>

  <div class="govuk-grid-column-one-third <%= direction_rtl_class %>">
    <% if @world_location_news.ordered_translations.count > 1 %>
      <%= render "govuk_publishing_components/components/translation_nav", {
        translations: @world_location_news.ordered_translations,
        no_margin_top: true,
      } %>
    <% end %>
    <%= render "shared/featured_links", {
      items: @world_location_news.ordered_featured_links,
      ga4_data: { section: @world_location_news.title }
    } %>
  </div>
</div>

<div class="govuk-grid-row gem-print-columns-none">
  <div class="govuk-grid-column-full"  <%= dir_attribute %> <%= lang_attribute %>>
    <% if @world_location_news.ordered_featured_documents&.any? %>
      <section id="featured">
        <%= render "govuk_publishing_components/components/heading", {
          text: I18n.t("shared.featured"),
          padding: true,
          font_size: "l",
          border_top: 2,
          margin_bottom: 4,
        } %>

        <% @world_location_news.ordered_featured_documents.in_groups_of(3, false) do |row| %>
          <div class="govuk-grid-row">
            <% row.each do |document| %>
              <div class="govuk-grid-column-one-third" data-module="ga4-link-tracker" data-ga4-track-links-only data-ga4-link="<%= ga4_image_card_json %>">
                <%= render "govuk_publishing_components/components/image_card", document %>
              </div>
            <% end %>
          </div>
        <% end %>
      </section>
    <% end %>
  </div>
</div>

<% if I18n.locale == :en %>
  <div class="govuk-grid-row gem-print-columns-none">
    <div class="govuk-grid-column-two-thirds govuk-!-padding-bottom-7">
      <section id="latest">
        <%= render "govuk_publishing_components/components/heading", {
          text: I18n.t("world_location_news.headings.latest"),
          padding: true,
          font_size: 27,
          border_top: 2,
          margin_bottom: 3,
        } %>

        <% if @world_location_news.latest.any? %>
          <%= render(partial: 'shared/document_list_from_search_api', locals: { documents: @world_location_news.latest, link_to: search_url(:world_location_news, :latest, @world_location_news.slug), ga4_section: I18n.t("world_location_news.headings.latest", locale: :en) })  %>
        <% else %>
          <p class="govuk-body"><%= I18n.t("world_location_news.no_updates") %></p>
        <% end %>

        <div
          data-module="ga4-link-tracker"
          data-ga4-link='{ "event_name": "navigation", "type": "subscribe", "index_link": 1, "index_total": 1, "section": "Content" }'
          data-ga4-track-links-only
        >
          <%= render "govuk_publishing_components/components/subscription_links", {
            email_signup_link: "/email/subscriptions/new?topic_id=#{@world_location_news.slug}"
          } %>
        </div>
      </section>
    </div>
  </div>
<% end %>

<% if @world_location_news.mission_statement.present? %>
  <div class="govuk-grid-row gem-print-columns-none"  <%= dir_attribute %> <%= lang_attribute %>>
    <div class="govuk-grid-column-two-thirds govuk-!-margin-bottom-6">
      <%= render "govuk_publishing_components/components/heading", {
        text: I18n.t("world_location_news.headings.mission"),
        padding: true,
        font_size: "l",
        border_top: 2,
        margin_bottom: 2,
      } %>

      <%= render_govspeak(@world_location_news.mission_statement) %>
    </div>
  </div>
<% end %>

<% if I18n.locale == :en && (@world_location_news.announcements.any? || @world_location_news.publications.any? || @world_location_news.statistics.any?) %>
  <div class="govuk-grid-row gem-print-columns-none">
    <div class="govuk-grid-column-two-thirds">
      <%= render "govuk_publishing_components/components/heading", {
        text: I18n.t("world_location_news.headings.documents"),
        padding: true,
        font_size: "l",
        border_top: 2,
        margin_bottom: 3,
      } %>

      <%= render(partial: 'shared/document_list_from_search_api', locals: { documents: @world_location_news.announcements, heading: I18n.t("world_location_news.headings.announcements"), ga4_section: I18n.t("world_location_news.headings.announcements", locale: :en), link_to: search_url(:world_location_news, :announcement, @world_location_news.slug) }) if @world_location_news.announcements.any? %>
      <%= render(partial: 'shared/document_list_from_search_api', locals: { documents: @world_location_news.publications, heading: I18n.t("world_location_news.headings.publications"), ga4_section: I18n.t("world_location_news.headings.publications", locale: :en), link_to: search_url(:world_location_news, :publication, @world_location_news.slug) }) if @world_location_news.publications.any? %>
      <%= render(partial: 'shared/document_list_from_search_api', locals: { documents: @world_location_news.statistics, heading: I18n.t("world_location_news.headings.statistics"), ga4_section: I18n.t("world_location_news.headings.statistics", locale: :en), link_to: search_url(:world_location_news, :statistic, @world_location_news.slug) }) if @world_location_news.statistics.any? %>
    </div>
  </div>
<% end %>

<% if @world_location_news.organisations&.any? %>
  <div class="govuk-grid-row gem-print-columns-none">
    <div class="govuk-grid-column-two-thirds govuk-!-padding-bottom-7">
      <section id="organisations" data-module="ga4-link-tracker">
        <%= render "govuk_publishing_components/components/heading", {
          text: I18n.t("world_location_news.headings.organisations"),
          padding: true,
          font_size: 27,
          margin_bottom: 3,
          heading_level: 2,
          border_top: 2,
        } %>
        <%
          organisations = @world_location_news.organisations.flatten
          ga4_organisations_length = organisations.length
          ga4_organisations_section = t("topical_events.organisations", locale: :en)
        %>
        <% organisations.in_groups_of(3, false) do |row| %>
          <div class="govuk-grid-row">
            <% row.each_with_index do |organisation, index|%>
              <div class="govuk-grid-column-one-third govuk-!-padding-bottom-7">
                <%= render "govuk_publishing_components/components/organisation_logo", {
                  organisation: {
                    name: organisation["title"],
                    url: organisation["base_path"],
                    crest: organisation.dig("details", "logo", "crest"),
                    brand: organisation.dig("details", "brand"),
                  },
                  data_attributes: {
                    ga4_link: {
                      event_name: "navigation",
                      type: "organisation logo",
                      index_link: index + 1,
                      index_total: ga4_organisations_length,
                      section: ga4_organisations_section,
                    }
                  }
                } %>
              </div>
            <% end %>
          </div>
        <% end %>
      </section>
    </div>
  </div>
<% end %>

<% if @world_location_news.worldwide_organisations&.any? %>
  <div class="govuk-grid-row gem-print-columns-none">
    <div class="govuk-grid-column-two-thirds govuk-!-padding-bottom-7">
      <% @world_location_news.worldwide_organisations.each do |organisation| %>
        <%= render "govuk_publishing_components/components/heading", {
          text: organisation["title"],
          padding: true,
          border_top: 1,
          margin_bottom: 3,
          heading_level: 3,
        } %>

        <p class="govuk-body">
          <%= organisation["description"] %>
        </p>

        <p class="govuk-body">
          <%= link_to I18n.t("world_location_news.find_out_more"), organisation["base_path"], class: "govuk-link" %>
        </p>
      <% end %>
    </div>
  </div>
<% end %>
