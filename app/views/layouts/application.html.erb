<%
  main_classes = %w[content]
  main_classes << (yield :page_class)
  lang = params["locale"]

  if content_item_h
    unless (!content_item_h["locale"])
      lang = content_item_h["locale"]
    end
  end
%>

<% content_for :body do %>
  <%= yield :back_link %>
  <% unless (content_for(:is_full_width_header) || content_for(:back_link)) %>
    <% if content_for?(:breadcrumbs) %>
      <%= yield :breadcrumbs %>
    <% else %>
      <%= render 'breadcrumbs' %>
    <% end %>
  <% end %>
  <%=
    content_tag(:main,
      id: "content",
      role: "main",
      class: main_classes,
      lang: lang,
      ) do
  %>
    <%= yield %>
  <% end %>
<% end %>

<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %> - <%= t('application.title.suffix')%></title>
  <%= javascript_include_tag "test-dependencies" if Rails.env.test? %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :meta_tags %>
  <%= render 'govuk_publishing_components/components/meta_tags', content_item: content_item_h %>
  <%=
    render_component_stylesheets
  %>
</head>
<body>
  <div class="wrapper" id="wrapper">
    <%= yield :body %>
  </div>
</body>
</html>
