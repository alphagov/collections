<% content_for :page_class, "taxon-page taxon-page--grid" %>
<%=
  render(
    partial: 'common',
    locals: {
      presented_taxon: presented_taxon
    }
  )
%>

<% if presented_taxon.show_guidance_section? %>
  <div class="grid-row">
    <hr class="taxon-page__section-divider" />
    <div class="column-two-thirds">
      <h2 class="taxon-page__section-heading">Guidance and Regulation</h2>
      <p class="taxon-page__section-description">Potential descriptive text for the guidance and regulation section, if needed</p>
      <%= render 'govuk_publishing_components/components/document_list', items: presented_taxon.guidance_and_regulation_list %>
    </div>
  </div>
<% end %>


<nav role="navigation" class="child-topics-list">
  <ol>
    <% presented_taxon.child_taxons.each_with_index do |child_taxon, index| %>
      <li class="<%= 'leftmost-row-cell-clear-float' if index % 3 == 0 %>">
        <h2>
          <%= link_to(
            child_taxon.title,
            child_taxon.base_path,
            data: presented_taxon.options_for_child_taxon(index: index)
          )%>
        </h2>
        <p><%= child_taxon.description %></p>
      </li>
    <% end %>
  </ol>
</nav>
