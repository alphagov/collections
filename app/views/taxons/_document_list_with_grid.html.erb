<% if documents.any? %>
  <div class="grid-row">
    <div class="column-two-thirds">
      <%= render 'govuk_publishing_components/components/document_list',
        items: documents,
        margin_top: true,
        margin_bottom: true
      %>

      <% if local_assigns[:see_more_link] %>
        <%= link_to(
          see_more_link[:text],
          see_more_link[:url]
        )%>
      <% end %>
    </div>
  </div>
<% end %>
