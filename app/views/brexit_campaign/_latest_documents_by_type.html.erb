<section>
  <div class="grid-row">
    <div class="column-two-thirds">
      <%= render "govuk_publishing_components/components/heading", {
        text: "Topics affected by Brexit",
        padding: true,
        margin_bottom: 4
      }
      %>
    </div>
  </div>

  <% @taxons_content_item.in_groups_of(3, false) do |taxons_group| %>
    <div class="grid-row">
      <% taxons_group.each do |taxon| %>
        <div class="column-one-third">
          <%= render "govuk_publishing_components/components/heading", {
            text: taxon[:title],
            padding: true,
            font_size: 24,
            heading_level: 3,
            border_top: 2,
            brand: "cabinet-office"
          } %>

          <%= render "components/topic-list", {
            items: [
              {
                text: "Example link 1",
                path: "/example"
              },
              {
                text: "This is another example of a link",
                path: "/example"
              },
              {
                text: "Another link",
                path: "/example"
              }
            ],
          } %>

          <a href="/more" class="campaign__see-more">See more</a>
        </div>
      <% end %>
    </div>
  <% end %>
</section>
