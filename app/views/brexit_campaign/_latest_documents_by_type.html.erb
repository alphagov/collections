<section>
  <% @taxons.in_groups_of(3, false).each_with_index do |taxons_group, row_index| %>
    <div class="grid-row">
      <% taxons_group.each do |taxon| %>
        <div class="column-one-third">
          <div class="campaign__taxon <%= "campaign__taxon--variable-border" if row_index.eql?(0) %> ">
            <h3 class="gem-c-heading  gem-c-heading--font-size-24 gem-c-heading--padding">
              <a href="https://finder-frontend-pr-706.herokuapp.com/prepare-individual-uk-leaving-eu?topic=<%= taxon.base_path %>"
                aria-label="<%= t('campaign.see_more_in_taxon', topic: taxon.title.downcase) %>"><%= taxon.title %></a>
            </h3>

            <p class="campaign__no-content"><%= taxon.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</section>
