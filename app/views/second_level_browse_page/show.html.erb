<% content_for :title, "#{page.title} - GOV.UK" %>
<%= render 'shared/tag_meta', tag: page %>
<% content_for :page_class, "browse" %>

<% content_for :meta_section do %>
  <meta name="govuk:section" content="<%= meta_section %>">
<% end %>

<div class="browse-panes subsection" data-state="subsection">
  <div id="subsection" class="subsection-pane pane with-sort">
    <%= render 'links', page: page %>
  </div>


  <div id="section" class="section-pane pane">
    <%= render 'second_level_browse_pages',
      title: page.active_top_level_browse_page.title,
      second_level_browse_pages: page.second_level_browse_pages,
      curated_order: page.second_level_pages_curated? %>
  </div>

  <%= render 'browse/top_level_browse_pages',
    top_level_browse_pages: page.top_level_browse_pages %>
</div>
